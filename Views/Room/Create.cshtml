@model BuilderBuddy.Models.Room

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoomName" class="control-label"></label>
                <input asp-for="RoomName" class="form-control" />
                <span asp-validation-for="RoomName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectID" class="control-label"></label>
                <select asp-for="ProjectID" class ="form-control" asp-items="ViewBag.ProjectID"></select>
            </div>
            <div class="form-group">
                <label asp-for="NumberofWalls" class="control-label"></label>
                <input asp-for="NumberofWalls" class="form-control" />
                <span asp-validation-for="NumberofWalls" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomCost" class="control-label"></label>
                <input asp-for="RoomCost" class="form-control" />
                <span asp-validation-for="RoomCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <input type="button" value="Add a Wall" onclick="location.href='@Url.Action("Create", "Wall")'" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

