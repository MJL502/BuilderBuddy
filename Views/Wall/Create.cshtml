@model BuilderBuddy.Models.Wall

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Wall</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Height" class="control-label"></label>
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Length" class="control-label"></label>
                <input asp-for="Length" class="form-control" />
                <span asp-validation-for="Length" class="text-danger"></span>
            </div>
            <!--
            <div class="form-group">
                <label asp-for="WallCost" class="control-label"></label>
                <input asp-for="WallCost" class="form-control" />
                <span asp-validation-for="WallCost" class="text-danger"></span>
            </div>
            -->
            <div class="form-group"> 
                @Html.LabelFor(model => model.ProjectID, "Project", htmlAttributes: new { @class = "control-label col-md-2" }) 
                <div class="col-md-10"> 
                    @Html.DropDownList("ProjectID", null, htmlAttributes: new { @class = "form-control" }) 
                    @Html.ValidationMessageFor(model => model.ProjectID, "", new { @class = "text-danger" }) 
                </div>  
            </div>

            <div class="form-group">
                <br>
                <p>Save your wall</p>
                <input type="submit" value="Save Wall" class="btn btn-primary"/>
                <br><br><br>
                <p>View List of Projects.  Make sure you save your wall first.</p>
                <input type="button" value="View Projects" class="btn btn-primary" onclick="location.href='@Url.Action("index", "project", "id = Wall.ProjectID")'"./>
            </div>
        </form>
    </div>
</div>

<div>
       <br>
       <br>
    <a asp-action="Index">View List of Walls</a>
</div>

